<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.javalab.numveifyapp.MainMenuActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="153dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="131dp" />

    <ListView
        android:layout_width="376dp"
        android:layout_height="502dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/list"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/addNewButton"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:onClick="onAddNewButtonClicked"
        android:text="@string/add_new_number"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:onClick="onSaveButtonPressed"
        android:text="@string/save"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/list" />

    <Button
        android:id="@+id/button4"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:onClick="onScanButtonClicked"
        android:text="@string/scan"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/addNewButton"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
